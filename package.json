{
  "name": "@newtral/nestjs-logger",
  "version": "0.0.0-development",
  "description": "Logger module for the NestJS framework",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "author": "Lorens Leon <lorens.leon@newtral.es>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Newtral-Tech/node-nestjs-logger.git"
  },
  "files": [
    "src",
    "esm",
    "lib"
  ],
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "newtral",
    "nestjs",
    "logger",
    "logger module",
    "pino"
  ],
  "dependencies": {
    "@types/node": "*",
    "@types/pino": "^6.3.11",
    "pino": "^6.13.0",
    "pino-pretty": "^5.1.2"
  },
  "devDependencies": {
    "@nestjs/common": "^8.0.6",
    "@nestjs/core": "^8.0.6",
    "@nestjs/testing": "^8.0.6",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "chai": "^4.3.4",
    "concurrently": "^6.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "faker": "^5.5.3",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "mocha": "^9.0.3",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.3.0",
    "semantic-release": "^17.4.4",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "~4.3.5"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.0.6",
    "@nestjs/core": "^8.0.6"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "concurrently 'npm:build:*'",
    "build:commonjs": "tsc",
    "build:esm": "tsc --module es2020 --outDir esm",
    "clean": "rm -rf lib esm reports tsconfig.tsbuildinfo",
    "test": "mocha --require tests/entry.js 'tests/**/*.{test,spec}.ts'",
    "cover": "nyc npm test",
    "lint": "eslint '{src,tests}/**/*.{js,ts}'",
    "lint:fix": "npm run lint -- --fix",
    "health": "npm install && npm run clean && npm run lint && npm run build:commonjs -- --noEmit && npm test -- --reporter dot",
    "ci": "npm ci && npm run lint && npm run build --noEmit && npm test",
    "prepublishOnly": "npm run clean && npm run build",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "publishConfig": {
    "access": "public"
  }
}
